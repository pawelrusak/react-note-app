{
  "parser": "babel-eslint",
  "extends": [
    "airbnb", 
    "airbnb/hooks",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "jest": true
  },
  "globals": {
    "document": true,
    "window": true
  },
  "overrides": [
    {
      "files": ["*.stories.js"],
      "rules": {
          "react/prop-types": 0,
          "react/jsx-props-no-spreading": 0
      }
    },
    {
      "files": ["src/**/__tests__/**/*.js", "src/**/?(*.)+(spec|test).js"],
      "extends": ["plugin:jest/style", "plugin:jest-formatting/strict", "plugin:testing-library/react", "plugin:jest-dom/recommended"],
      "rules": {
          "react/jsx-props-no-spreading": 0
      }
    }
  ],
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": [
      1, 
      { 
        "extensions": [
          ".js"
        ] 
      }
    ],
    "react/react-in-jsx-scope": 0,
    "react/state-in-constructor": [2, "never"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}