{
  "extends": [
    "airbnb", 
    "airbnb/hooks",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "jest": true
  },
  "globals": {
    "document": true
  },
  "overrides": [
    {
      "files": ["*.stories.js"],
      "rules": {
          "react/prop-types": 0,
          "react/jsx-props-no-spreading": 0
      }
    }
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1, 
      { 
        "extensions": [
          ".js"
        ] 
      }
    ],
    "react/react-in-jsx-scope": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}